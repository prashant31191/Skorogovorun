<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.liulishuo.magicprogresswidget.MagicProgressBar
        android:id="@+id/course_progress_bar"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:visibility="gone"
        android:layout_margin="@dimen/standard_dimen"
        app:mpb_background_color="@android:color/darker_gray"
        app:mpb_fill_color="@color/colorAccent"
        app:mpb_flat="false" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/course_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/course_progress_bar" />

    <include layout="@layout/empty" />

    <include layout="@layout/progress_bar" />
</RelativeLayout>
