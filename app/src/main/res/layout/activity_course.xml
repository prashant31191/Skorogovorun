<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/course_linear_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <com.liulishuo.magicprogresswidget.MagicProgressBar
            android:id="@+id/course_progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="10dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/standard_dimen"
            android:layout_marginStart="@dimen/standard_dimen"
            android:layout_toLeftOf="@+id/course_count"
            android:layout_toStartOf="@+id/course_count"
            android:visibility="gone"
            app:mpb_background_color="@color/colorBackgroundProgressBar"
            app:mpb_fill_color="@color/colorAccent"
            app:mpb_flat="false" />

        <TextView
            android:id="@+id/course_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_margin="@dimen/standard_dimen"
            android:textStyle="bold"
            android:visibility="gone"
            tools:text="0/20" />
    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/course_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/course_linear_layout" />

    <include layout="@layout/empty" />

    <include layout="@layout/progress_bar" />
</RelativeLayout>
