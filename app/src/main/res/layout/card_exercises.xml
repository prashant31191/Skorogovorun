<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_exercises"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/card_margin"
    card_view:cardCornerRadius="@dimen/cardCornerRadius">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/eCard_image"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:layout_row="0"
            android:scaleType="centerCrop"
            tools:src="@drawable/forest" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:orientation="vertical">

            <TextView
                android:id="@+id/eCard_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/standard_dimen"
                android:layout_marginStart="@dimen/standard_dimen"
                android:layout_marginTop="@dimen/standard_dimen"
                android:fontFamily="sans-serif-condensed"
                android:textColor="@android:color/white"
                android:textSize="@dimen/title_size"
                android:textStyle="bold"
                tools:text="Item" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center"
            android:layout_row="1"
            android:orientation="horizontal">

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/eCard_favorite_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="gone"
                app:fabSize="mini"
                app:srcCompat="@drawable/favorite"
                tools:ignore="VectorDrawableCompat" />

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/eCard_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/standard_dimen"
                app:fabSize="mini"
                app:srcCompat="@drawable/play"
                tools:ignore="VectorDrawableCompat" />
        </LinearLayout>

        <TextView
            android:id="@+id/eCard_date"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_gravity="start|center"
            android:layout_margin="@dimen/standard_dimen"
            android:layout_row="1"
            android:textSize="@dimen/subtitle_size"
            android:textStyle="bold"
            tools:text="Заходили 17 минут назад" />
    </GridLayout>
</android.support.v7.widget.CardView>