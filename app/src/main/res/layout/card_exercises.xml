<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_margin="@dimen/standard_dimen"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/card_default"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="@dimen/cardCornerRadius">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/card_image_default"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:layout_row="0"
                android:scaleType="centerCrop"
                tools:src="@drawable/preview_patters" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_row="0"
                android:orientation="horizontal">

                <com.sackcentury.shinebuttonlib.ShineButton
                    android:id="@+id/card_favorite_default"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:src="@android:color/white"
                    app:allow_random_color="false"
                    app:btn_color="@android:color/white"
                    app:btn_fill_color="@android:color/white"
                    app:click_animation_duration="0"
                    app:shine_animation_duration="0"
                    app:shine_count="0"
                    app:shine_turn_angle="40"
                    app:siShape="@drawable/favorite" />

                <com.sackcentury.shinebuttonlib.ShineButton
                    android:id="@+id/card_button_default"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/standard_dimen"
                    android:layout_marginEnd="@dimen/standard_dimen"
                    android:layout_marginRight="@dimen/standard_dimen"
                    android:layout_marginTop="@dimen/standard_dimen"
                    android:src="@android:color/white"
                    app:allow_random_color="false"
                    app:btn_color="@android:color/white"
                    app:btn_fill_color="@android:color/white"
                    app:click_animation_duration="0"
                    app:shine_animation_duration="0"
                    app:shine_count="0"
                    app:shine_turn_angle="40"
                    app:siShape="@drawable/play" />
            </LinearLayout>
        </GridLayout>
    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/card_title_default"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/standard_dimen"
        android:fontFamily="sans-serif-condensed"
        android:textColor="@android:color/black"
        android:textSize="@dimen/subtitle_size"
        android:gravity="center"
        android:layout_gravity="center"
        android:textStyle="bold"
        tools:text="Item" />
</LinearLayout>

